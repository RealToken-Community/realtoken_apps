# Indique la version minimale d'iOS supportée par votre application
platform :ios, '15.6'

# Désactive les statistiques CocoaPods pour améliorer les temps de build
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# Définit les configurations du projet
project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Détermine le chemin vers le SDK Flutter
def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcconfig_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

# Charge le script d'aide de Flutter pour les pods
require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

# Configure les options spécifiques de Flutter pour le Podfile
flutter_ios_podfile_setup

target 'Runner' do
  # Utilisez l'une des deux directives ci-dessous en fonction de vos dépendances

  # Option 1: Si vous avez des pods nécessitant 'use_frameworks!'
  use_frameworks! :linkage => :dynamic

  # Option 2: Si vous rencontrez des problèmes avec 'use_frameworks!', commentez la ligne ci-dessus et décommentez la suivante
   #use_modular_headers!

  # Installe tous les pods requis par Flutter et les plugins
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

# Si vous avez des tests unitaires, déclarez la cible 'RunnerTests' en dehors de la cible 'Runner'
target 'RunnerTests' do
  inherit! :search_paths
end

# Ajoutez des configurations supplémentaires après l'installation des pods
post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'arm64'
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.6'
      
      # Assure que les frameworks sont construits pour Release lors de l'archive
      if config.name == 'Release'
        config.build_settings['BUILD_LIBRARY_FOR_DISTRIBUTION'] = 'YES'
      end
    end
  end
  
  # Fix pour les modules avec @import qui ne fonctionnent pas lors de l'archive
  # Supprime tous les @import et utilise uniquement #if __has_include
  generated_plugin_file = File.join(File.dirname(__FILE__), 'Runner', 'GeneratedPluginRegistrant.m')
  if File.exist?(generated_plugin_file)
    content = File.read(generated_plugin_file)
    
    # Supprime tous les patterns "#else @import xxx;" ou "#elif ... @import xxx;"
    # et les remplace par une version sans fallback @import
    content.gsub!(/#if __has_include\(<([^>]+)>\)\r?\n#import <[^>]+>\r?\n#else\r?\n@import ([^;]+);\r?\n#endif/) do |match|
      header = $1
      module_name = $2
      "#if __has_include(<#{header}>)\n#import <#{header}>\n#endif"
    end
    
    content.gsub!(/#if __has_include\(<([^>]+)>\)\r?\n#import <[^>]+>\r?\n#elif[^\n]*\r?\n@import ([^;]+);\r?\n#endif/) do |match|
      header = $1
      module_name = $2
      "#if __has_include(<#{header}>)\n#import <#{header}>\n#endif"
    end
    
    # Protège tous les appels dans registerWithRegistry qui dépendent d'imports conditionnels
    # Extrait toutes les informations des imports pour protéger les appels correspondants
    protected_plugins = []
    
    # Trouve tous les imports conditionnels et leurs classes associées
    content.scan(/#if __has_include\(<([^>]+)>\)\r?\n#import <[^>]+>\r?\n#endif/) do |header|
      header_path = header[0]
      # Extrait le nom du module du chemin du header
      module_name = header_path.split('/').first
      # Extrait le nom de la classe du nom du header
      class_name = File.basename(header_path, '.h')
      protected_plugins << { 
        header: header_path, 
        class: class_name, 
        method: class_name.gsub(/Plugin$/, '') 
      }
    end
    
    # Protège chaque appel dans registerWithRegistry
    protected_plugins.each do |plugin|
      # Cherche la ligne d'enregistrement et la protège si nécessaire
      plugin_pattern = /(\+ \(void\)registerWithRegistry:\(NSObject<FlutterPluginRegistry>\*\)registry \{[^}]*)  \[#{plugin[:class]} registerWithRegistrar:\[registry registrarForPlugin:@"[^"]+"\]\];/
      
      if content =~ plugin_pattern
        before = $1
        # Vérifie si la ligne est déjà protégée
        if !before.include?("#if __has_include(<#{plugin[:header]}>")
          content.gsub!(plugin_pattern, "\\1\n#if __has_include(<#{plugin[:header]}>)\n  [#{plugin[:class]} registerWithRegistrar:[registry registrarForPlugin:@\"#{plugin[:method]}\"]];\n#endif")
        end
      end
    end
    
    File.write(generated_plugin_file, content)
  end
end
